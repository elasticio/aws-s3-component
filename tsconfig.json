{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "ES2020"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "rootDirs": [
      "./"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "coverage"
  ]
}